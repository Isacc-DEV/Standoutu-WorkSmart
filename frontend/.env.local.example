# Backend API base URL
NEXT_PUBLIC_API_BASE=http://localhost:4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/ops_db

# NextAuth / Microsoft identity (required for calendar + auth flows)
MS_CLIENT_ID=your-client-id
MS_CLIENT_SECRET=your-client-secret
MS_TENANT_ID=common
MS_REDIRECT_URI=http://localhost:3000/api/auth/callback/azure-ad
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-a-secure-secret
NEXT_TELEMETRY_DISABLED=1

# Optional: disable Prisma adapter when Postgres isn't available
# NEXTAUTH_PRISMA_DISABLED=true
